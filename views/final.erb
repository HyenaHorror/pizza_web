<h1>Your final order:</h1>

<%count = 1%>

<div2 class="columns">
<% session[:full_order].each do |order| %>
<h2>Pizza <%=count%></h2>
  <h3>Size:  <%= order[0][0] %></h3>
  <p></p>
  <h3>Crust:  <%= order[1][0] %></h3>
  <p></p>
  <h3>Sauce:  <%= order[2][0] %></h3>
  <p></p>
  <h3>Meats: </h3>
  <%if order[3][0] == nil%>
    <h3>None</h3>
  <%else%>
      <%order[3][0].each do |meat|%>
      <h3><%= meat%></h3>
      <% end %>
  <% end %>
  <br>
  <h3>Toppings: </h3>
  <%if order[4][0] == nil%>
    <h3>None</h3>
  <%else%>
      <%order[4][0].each do |topping|%>
      <h3><%= topping%></h3>
      <% end %>
  <% end %>
  <%count += 1%>
  <br>
<% end %>
</div2>

<% total_total = session[:final_total].to_f %>
<% tax = total_total * 0.06 %>
<% if session[:address] == [] %>
  <% delivery = 0 %>
  <h2>No Delivery</h2>
<% else %>
  <% f_name = session[:address][0] %>
  <% l_name = session[:address][1] %>
  <% address = session[:address][2] %>
  <% city = session[:address][3] %>
  <% state = session[:address][4] %>
  <h2>Order will be delivered to:</h2>
  <h3>  <%= f_name %>  <%= l_name %> </h3>
  <h3>  <%= address %> </h3>
  <h3>  <%= city %>,  <%= state %> </h3>
  <% delivery = 5 %>
<% end %>
<% total_total = total_total + delivery + tax  %>
<h2>Your total is: $<%= sprintf("%.02f",total_total)%></h2>

<h3></h3>
<br>
